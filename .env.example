# Xendit Environment (development/production)
XENDIT_ENV=development

# Xendit API Keys
XENDIT_SECRET_KEY_DEV=your_development_secret_key_here
XENDIT_SECRET_KEY_PROD=your_production_secret_key_here

# Xendit Webhook Token
XENDIT_WEBHOOK_TOKEN=your_webhook_token_here

# API Version
XENDIT_API_VERSION=2024-11-11

# Xendit Payment Channel for xendit.py (contoh: QRIS, ID_DANA, ID_SHOPEEPAY)
XENDIT_CHANNEL_CODE=QRIS
XENDIT_REQUEST_AMOUNT=500

# HTTP request tuning for xendit.py
XENDIT_REQUEST_TIMEOUT_SECONDS=45
XENDIT_REQUEST_MAX_RETRIES=2
XENDIT_RETRY_DELAY_SECONDS=1.5

# Flask Config
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Tripay Configuration
TRIPAY_API_KEY=your_tripay_api_key_here
TRIPAY_PRIVATE_KEY=your_tripay_private_key_here
TRIPAY_MERCHANT_CODE=T8978
